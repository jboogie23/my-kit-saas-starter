{
  "name": "kit-saas-starter",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "paraglide-js compile --project ./project.inlang && vite build",
    "preview": "pnpm run build && wrangler pages dev .svelte-kit/cloudflare",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "build-cf-types": "wrangler types && mv worker-configuration.d.ts src/",
    "db:migrate": "drizzle-kit generate",
    "db:push:dev": "wrangler d1 migrations apply kss-prod",
    "db:push:prod": "wrangler d1 migrations apply kss-prod --remote",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file=.env scripts/seed.ts",
    "db:backup:prod": "wrangler d1 export kss-prod --output backup-prod.sql --remote",
    "postinstall": "paraglide-js compile --project ./project.inlang",
    "inlang:lint": "pnpx @inlang/cli lint --project project.inlang",
    "test": "pnpm run vt:test && pnpm run pw:test",
    "vt:watch": "vitest",
    "vt:test": "vitest run",
    "vt:report": "vitest --ui",
    "pw:test": "playwright test",
    "pw:report": "playwright show-report",
    "pw:install": "playwright install --with-deps",
    "pw:codegen": "playwright codegen localhost:5173"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240614.0",
    "@faker-js/faker": "^8.4.1",
    "@inlang/paraglide-js": "1.9.1",
    "@playwright/test": "^1.44.1",
    "@stripe/stripe-js": "^3.5.0",
    "@svelte-put/cloudflare-turnstile": "^0.1.3",
    "@sveltejs/adapter-cloudflare": "^4.4.1",
    "@sveltejs/kit": "^2.5.15",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/eslint": "8.56.10",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.22.7",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-svelte": "2.39.3",
    "globals": "^15.4.0",
    "pino-pretty": "^11.2.1",
    "postcss": "^8.4.38",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "stripe": "^15.11.0",
    "super-sitemap": "^0.14.14",
    "svelte": "5.0.0-next.153",
    "svelte-check": "^3.8.0",
    "svelte-meta-tags": "^3.1.2",
    "svelte-stripe": "^1.2.0",
    "sveltekit-flash-message": "^2.4.4",
    "sveltekit-rate-limiter": "^0.5.1",
    "sveltekit-view-transition": "^0.5.3",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "tsx": "^4.15.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "8.0.0-alpha.25",
    "vite": "^5.3.1",
    "vite-plugin-kit-routes": "^0.6.2",
    "vite-plugin-top-level-await": "^1.4.1",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^1.6.0",
    "wrangler": "^3.60.3"
  },
  "type": "module",
  "dependencies": {
    "@inlang/paraglide-sveltekit": "0.10.2",
    "@lucia-auth/adapter-sqlite": "^3.0.1",
    "arctic": "^1.9.1",
    "better-sqlite3": "^11.0.0",
    "bits-ui": "^0.21.10",
    "check-password-strength": "^2.0.10",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.31.2",
    "formsnap": "^1.0.0",
    "just-extend": "^6.2.0",
    "lucia": "^3.2.0",
    "lucide-svelte": "^0.395.0",
    "mode-watcher": "^0.3.0",
    "oslo": "^1.2.0",
    "pino": "^9.2.0",
    "svelte-sonner": "^0.3.24",
    "sveltekit-superforms": "^2.15.1",
    "tailwind-merge": "^2.3.0",
    "tailwind-variants": "^0.2.1",
    "worker-password-auth": "^1.0.0",
    "zod": "^3.23.8"
  }
}
